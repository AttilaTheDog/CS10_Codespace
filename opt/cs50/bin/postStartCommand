#!/bin/bash

# Start Docker outside of Docker
sudo nohup /etc/init.d/docker start > /dev/null 2>&1

# An array of Docker images we need to pull in background
docker_images=(
    "cs50/cli:amd64"
    "rocker/tidyverse"
    # Add more images here as needed
)

# Loop through the array and pull each image
for image in "${docker_images[@]}"; do
    nohup docker pull "$image" > /dev/null 2>&1
done

# Remove dangling Docker images
docker image prune --force